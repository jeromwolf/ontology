# Market Data API Configuration
# Copy this file to .env.local and fill in your API keys

# KRX (Korea Exchange) API
NEXT_PUBLIC_KRX_API_KEY=your_krx_api_key_here
KRX_SECRET_KEY=your_krx_secret_key_here
NEXT_PUBLIC_KRX_API_URL=https://api.krx.co.kr/v1

# Alpha Vantage API (US Markets)
NEXT_PUBLIC_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
NEXT_PUBLIC_ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co

# AI/ML API Configuration
NEXT_PUBLIC_AI_API_KEY=your_ai_api_key_here
NEXT_PUBLIC_AI_ENDPOINT=http://localhost:8000/api/v1

# OpenAI API Configuration (for AI Image Generator)
OPENAI_API_KEY=your_openai_api_key_here

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://api.kss-finance.com/v1/stream

# Database Configuration (for caching)
REDIS_URL=redis://localhost:6379
TIMESCALE_CONNECTION_STRING=postgresql://username:password@localhost:5432/kss_market_data

# News API (for sentiment analysis)
NEWS_API_KEY=your_news_api_key_here

# Optional: Alternative Data Providers
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here

# Feature Flags
ENABLE_REAL_TIME_DATA=true
ENABLE_CACHING=true
ENABLE_WEBSOCKET=false
FALLBACK_TO_MOCK=true